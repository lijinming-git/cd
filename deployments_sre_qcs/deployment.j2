#jinja2: trim_blocks:False
apiVersion: apps/v1
kind: Deployment
metadata:
  name: "{{ service_name }}"
  namespace: "{{ namespace }}"
spec:
  replicas: {{ replicas }}
  selector:
    matchLabels:
      dce.daocloud.io/app: "{{ service_name }}"
  template:
    metadata:
      labels:
        dce.daocloud.io/app: "{{ service_name }}"
    spec:
      hostAliases:
      - ip: "10.95.35.203"
        hostnames:
        - "hdp-watsons-kafka-203.aswcntechlab.com"
      - ip: "10.95.35.43"
        hostnames:
        - "hdp-watsons-kafka-43.aswcntechlab.com"
      - ip: "10.95.35.21"
        hostnames:
        - "hdp-watsons-kafka-21.aswcntechlab.com"
      - ip: "10.95.35.46"
        hostnames:
        - "hdp-watsons-kafka-46.aswcntechlab.com"
      - ip: "10.95.35.160"
        hostnames:
        - "hdp-watsons-160"
        - "hdp-watsons-160.aswcntechlab.com"
      - ip: "10.95.35.161"
        hostnames:
        - "hdp-watsons-161"
        - "hdp-watsons-161.aswcntechlab.com"
      - ip: "10.95.35.62"
        hostnames:
        - "hdp-watsons-62"
        - "hdp-watsons-62.aswcntechlab.com"
      - ip: "10.95.35.70"
        hostnames:
        - "aswtechlabconvertlabhadoop01"
      - ip: "10.95.35.71"
        hostnames:
        - "aswtechlabconvertlabhadoop02"
      - ip: "10.95.35.92"
        hostnames:
        - "aswtechlabconvertlabhadoop03"
      - ip: "10.95.35.206"
        hostnames:
        - "aswtechlabconvertlabjenkins"
      imagePullSecrets:
      - name: xsio-registry-secret
      volumes:
      - name: log-volume
        hostPath:
          path: /opt/log/stash
          type: DirectoryOrCreate
      - name: tmp-volume
        hostPath:
          path: /opt/tmp
          type: DirectoryOrCreate
      containers:
      - name: "{{ service_name }}"
        image: "nexus.xsio.cn/{{ service_version }}/{{ image_name }}:{{ image_tag }}"
        imagePullPolicy: IfNotPresent
        ports:
        - name: web
          containerPort: {{ service_port }}
        {% if extra_ports is defined %}{%- for port in extra_ports.split(',') %}
        - name: port{{loop.index}}
          containerPort: {{port}} {% endfor %}{% endif %}
        env:
        - name: version
          value: "{{ image_tag }}"
        envFrom:
        - configMapRef:
            name: global-config
        - configMapRef:
            name: "{{ service_name }}-config"
        volumeMounts:
        - mountPath: /opt/log/stash
          name: log-volume
        - mountPath: /var/tmp
          name: tmp-volume
        - mountPath: /tmp
          name: tmp-volume
        resources:
          requests:
            memory: "{{ requests_memory | default('1024Mi') }}"
            cpu: "{{ requests_cpu | default('250m') }}"
          limits:
            memory: "{{ limits_memory | default('1024Mi') }}"
            cpu: "{{ limits_cpu | default('1000m') }}"
{% if (no_health_check is undefined) or (no_health_check == False) %}
        readinessProbe:
          httpGet:
            path: /ping
            port: web
          initialDelaySeconds: {{ readiness_initial_delay | default(60) }}
          periodSeconds: {{ readiness_period | default(30) }}
        livenessProbe:
          tcpSocket:
            port: web
          initialDelaySeconds: {{ liveness_initial_delay | default(60) }}
          periodSeconds: {{ liveness_period | default(30) }}
{% endif %}
