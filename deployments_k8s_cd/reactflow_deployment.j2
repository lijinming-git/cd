apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: "{{ service_name }}" 
  name: "{{ service_name }}"
  namespace: "{{ namespace }}"
spec:
  replicas: {{ deploy_conf.replicas }}
  selector:
    matchLabels:
      app: "{{ service_name }}"
  template:
    metadata:
      labels:
        app: "{{ service_name }}"
    spec:
      imagePullSecrets:
      - name: xsio-registry-secret
      volumes:
      - name: log-volume
        hostPath:
          path: /opt/log/stash
          type: DirectoryOrCreate
      serviceAccountName: reactflow
      containers:
      - name: "{{ service_name }}"
        image: "nexus-public.xsio.cn/{{ namespace }}/{{ deploy_conf.image_name }}:{{ image_tag }}"
        imagePullPolicy: IfNotPresent
        ports:
        - name: web
          containerPort: {{ server_port }}
        - name: remoting
          containerPort: 2551
          protocol: TCP
        - name: management
          containerPort: 8558
          protocol: TCP
        envFrom:
        - configMapRef:
            name: global-config
        - configMapRef:
            name: "{{ service_name }}-config"
        env:
        - name: service_id
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: ExternalIp
          valueFrom:
            fieldRef:
              fieldPath: status.podIP
        volumeMounts:
        - mountPath: /opt/log/stash
          name: log-volume
        resources:
          requests:
            memory: "{{ deploy_conf.requests_memory | default('2048Mi') }}"
            cpu: "{{ deploy_conf.requests_cpu | default('125m') }}"
          limits:
            memory: "{{ deploy_conf.limits_memory | default('4096Mi') }}"
            cpu: "{{ deploy_conf.limits_cpu | default('1000m') }}"